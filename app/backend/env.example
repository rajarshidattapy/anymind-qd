# ============================================
# Mantlememo Backend Environment Variables
# ============================================

# App Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://127.0.0.1:8080,http://127.0.0.1:5173

# Qdrant (single persistence layer)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Embeddings (required for messages semantic search)
OPENAI_API_KEY=sk-proj-your_openai_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# These MUST match the embedding model dimensions (text-embedding-3-small = 1536)
QDRANT_MESSAGE_VECTOR_SIZE=1536
QDRANT_CAPSULE_VECTOR_SIZE=1536

# Encrypt stored agent API keys (recommended; if empty falls back to SECRET_KEY)
API_KEY_ENCRYPTION_SECRET=your_encryption_secret_here

# LLM API Keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
MISTRAL_API_KEY=your_mistral_key_here

# Memory & Search Services
MEM0_ENABLED=True
TAVILY_API_KEY=tvly-your_tavily_key_here

# Ethereum Sepolia Testnet (Development)
ETHEREUM_RPC_URL=https://rpc.sepolia.org
ETHEREUM_CHAIN_ID=11155111
ETHEREUM_NETWORK=ethereum-sepolia-testnet
MANTLEMEMO_CONTRACT_ADDRESS=0x4287F8a28AC24FF1b0723D26747CBE7F39C9C167

# Ethereum Mainnet (Production - uncomment when ready)
# ETHEREUM_RPC_URL=https://eth.llamarpc.com
# ETHEREUM_CHAIN_ID=1
# ETHEREUM_NETWORK=ethereum-mainnet
# MANTLEMEMO_CONTRACT_ADDRESS=your_mainnet_contract_address

# JWT Configuration
SECRET_KEY=your_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

